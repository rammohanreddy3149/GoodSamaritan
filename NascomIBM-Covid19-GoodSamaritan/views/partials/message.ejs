<% var numberOfTrue = 0 %>
<% for(var i=0; i<chat.length; i++){ 
     if(chat[i].body.isRead === false){ 
         numberOfTrue = numberOfTrue + 1;
     } 
 } %>

<a href="#" class="dropdown-toggle" data-toggle="dropdown">
    <span class="fa fa-globe "  style="color: rgb(144, 243, 77);"></span> <b class="caret"></b> 
    <% if(numberOfTrue != 0){ %>
    <span class="label label-primary nav-label-icon" id=""><%= numberOfTrue %></span>
    <% } else{ %>
        <span class="label label-primary nav-label-icon" id=""></span>
    <% } %>
</a>
<ul class="dropdown-menu dmenu">
    <li>
        <div class="navbar-login">
            <div class="col-md-12">
                <div class="row">
                    <div class="dropdown-tag"  style="background-color: #343a40;">
                        <h3 class="text-center dropdown-tag-head">
                            Notifications
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <% if(chat.length > 0){%>
                    <% _.forEach(chat, function(val) { %>
                        <% if(user.username !== val.body.senderName) { %>
                            <a data-value="<%= val.body._id %>" id="messageLink" href="/chat/<%= val.body.senderName.toLowerCase().replace(/ /g,'-') %>&<%= user.username.toLowerCase().replace(/ /g,'-') %>">
                            <div class="row">
                                <div class="col-md-3">
                                    <p class="text-center">
                                    <img src="/uploads/<%= val.body.receiver.userImage %>" class="img-circle img-responsive dropdown-img" />
                                    </p>
                                    </div>
                                    <div class="col-md-9 pleft-0">
                                        <div class="row">
                                            <div class="col-md-12 textRow">
                                                <div class="col-md-12" id="textRow" style="color: #3d4144;">
                                                    <p class="text-left drop-name">
                                                        <% if(user.username !== val.body.receiverName) { %>
                                                            <strong><%= val.body.receiverName %></strong>
                                                            <% } else { %>
                                                        <strong><%= val.body.senderName %></strong>
                                                        <% } %>
                                                    </p>
                                                    <input type="hidden" name="chatId" id="chatId" value="<%= val.body._id %>">
                                                    <%= val.body.message %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            </a>
                            <hr class="dropdown-divider" />
                            <% } else if(user.username === val.body.senderName) { %>
                                <a data-value="<%= val.body._id %>" id="messageLink" href="/chat/<%= val.body.receiverName.toLowerCase().replace(/ /g,'-') %>&<%= user.username.toLowerCase().replace(/ /g,'-') %>">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <p class="text-center">
                                            <img src="/uploads/<%= val.body.receiver.userImage %>" class="img-circle img-responsive dropdown-img" />
                                            </p>
                                            </div>
                                            <div class="col-md-9 pleft-0">
                                                <div class="row">
                                                    <div class="col-md-12 textRow">
                                                        <div class="col-md-12" id="textRow" style="color: #3d4144;">
                                                            <p class="text-left drop-name">
                                                                <% if(user.username != val.body.receiverName) { %>
                                                                    <strong><%= val.body.receiverName %></strong>
                                                                    <% } else { %>
                                                                <strong><%= val.body.senderName %></strong>
                                                                <% } %>
                                                            </p>
                                                            <input type="hidden" name="chatId" id="chatId" value="<%= val.body._id %>">
                                                            <%= val.body.message %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </a>
                                    <hr class="dropdown-divider" />
                            <% }})} %>
            </div>
        </div>
    </li>

</ul>
